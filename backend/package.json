{
  "name": "basketball-stats-backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "nodemon --watch src src/index.js",
    "start": "node src/index.js",
    "build": "chmod +x node_modules/.bin/prisma && npx prisma generate",
    "postinstall": "chmod +x node_modules/.bin/prisma 2>/dev/null || true && npx prisma generate || true",
    "prisma": "prisma",
    "deploy": "npx prisma generate && npx prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "socket.io": "^4.7.5",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "prisma": "^6.16.2"
  }
}
